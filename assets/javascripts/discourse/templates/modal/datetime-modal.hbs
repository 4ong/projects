{{#d-modal-body title=label class="poll-ui-builder"}}
  <form class="poll-ui-builder-form form-horizontal">
    <div class="options">
        <div class="poll-date">
          {{date-picker-future value=date containerId="date-container" onSelect=(action (mut date))}}
          {{input type="time" value=time}}
          <div id="date-container"></div>
        </div>
    </div>

  </form>
{{/d-modal-body}}

<div class="modal-footer">
  {{d-button action=(action "closeDatetime") icon="chart-bar" class='btn-primary' label='close'}}
  {{#d-button action=(action "resetDatetime") class='btn-danger'}}
    <span>reset</span>
  {{/d-button}}
</div>
